php_value display_errors On
php_value mbstring.http_input auto
php_value date.timezone America/New_York

DirectoryIndex index.php index.html index.htm index2.html

# In practice may be better to whitelist, but I like the simplicity and automatization of this one
RedirectMatch 404 /\..*$
RedirectMatch 404 ^/functions/.*$

ErrorDocument 403 https://errors.infinityfree.net/errors/403/
ErrorDocument 404 https://errors.infinityfree.net/errors/404/
ErrorDocument 500 /500.html
